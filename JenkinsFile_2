
pipeline{
    agent none
    stages{
        stage('Backend'){
            agent{
                docker { image 'maven:3.8.1-adoptopenjdk-11'} 
            }
            steps{
                sh 'mvn --version'
            }
        }
        stage('FrontEnd'){
            agent{
                docker { image 'alpine:3.18'}
            }
            steps{
                sh ' node --version'
            }

        }
    }
}